<%= form_for [@micropost, @micropost.comments.build] do |f| %>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.label :user_id %>
      <%= f.number_field :user_id %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>