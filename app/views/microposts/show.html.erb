<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @micropost.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @micropost.user_id %>
 </p>

<p>
  <strong>Photo:</strong>
  <%= @micropost.photo %>
</p>





<%= link_to 'Edit', edit_micropost_path(@micropost) %> |
<%= link_to 'Back', microposts_path %>

<%= link_to "add Comment", new_micropost_comment_path(@micropost) %>



<%= form_for [@micropost, @micropost.comments.build],remote: true do |f| %>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body, id:'name_field'  %>
    </div>

    <div class="field">
      <%= f.label :user_id %>
      <%= f.number_field :user_id %>
    </div>

    <div class="field">
      <%= image_tag @micropost.image.url(:thumb), class: 'img-show' if @micropost.image? %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>



<% end %>


<ul id="comments">
  <%= render @comments  %>
</ul>


